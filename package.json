{
  "name": "robotfriends",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@fullhuman/postcss-purgecss": "^2.1.2",
    "autoprefixer": "^9.7.6",
    "axios": "^0.19.2",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.1",
    "react": "^16.10.2",
    "react-dom": "^16.10.2",
    "react-redux": "^7.1.1",
    "react-scripts": "^3.2.0",
    "redux": "^4.0.1",
    "redux-promise-middleware": "^6.1.2",
    "redux-thunk": "^2.3.0",
    "tachyons": "^4.11.1",
    "tailwindcss": "^1.4.4"
  },
  "scripts": {
    "build:tailwind": "postcss src/styles/tailwind.css -o src/styles/tailwind.generated.css",
    "watch:tailwind": "postcss -w src/styles/tailwind.css -o src/styles/tailwind.generated.css",
    "start": "run-p watch:tailwind start:react",
    "start:react": "react-scripts start",
    "prebuild": "npm run build:tailwind",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "prettier": "prettier --ignore-path .prettierignore \"**/*.+(json|js)\"",
    "format": "yarn prettier -- --write"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.2",
    "prettier": "^2.0.5",
    "redux-logger": "^3.0.6"
  }
}
